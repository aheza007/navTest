<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="3dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/primary_text"
            android:text="News" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/primary_text"
            android:text="3h ago" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp" >

        <ImageView
            android:id="@+id/imageView_feed_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:maxWidth="250dp"
            android:padding="3dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView_feed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="@color/primary_text"
            android:text="Apple Says “We Hear You Taylor Swift”, Will Pay Musicians During Free Trial"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
         >

        <TextView
            android:id="@+id/textView_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:text="TechCruch" />

        <TextView
            android:id="@+id/textView_authors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/primary_text"
            android:text="David and Monako Suarez" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_feed_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/primary_text"
        android:text="Apple Says “We Hear You Taylor Swift”, Will Pay Musicians During Free Trial Apple Says “We Hear You Taylor Swift”, Will Pay MWill Pay Musicians During Free Trial Apple Says “We Hear You Taylor Swift”, Will Pay Musicians During Free TrialApple Says “We Hear YouTrialApple Says “We Hear You Taylor Swift”, Will Pay Musicians During Free TrialApple Says “We Hear You Taylor Swift”, Will Pay Musicians During Free TrialApple Says “We Hear You Taylor Swift”, Will Pay Musicians During Free Trial" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <Button
            android:id="@+id/buttonReadMore"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/primary_text"
            android:text="Read more" />

        <ImageView
            android:id="@+id/imageViewshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/buttonReadMore"
            android:src="@drawable/ic_share_black_36dp" />
    </RelativeLayout>

</LinearLayout>